@model List<Employee>

@{
	ViewData["Title"] = "List";
}
<h1>@ViewData["Title"]</h1>
<hr />
<table class="table table-bordered">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Address</th>
		<th></th>
	</tr>
	@foreach(var person in Model)
	{
		<tr>
			<td>@person.Name</td>
			<td>@person.Email</td>
			<td>@person.Address</td>
			<td>
				@Html.ActionLink("Details", "Details", new{id=person.Id}, new {@class = "btn btn-primary"}) |
				@Html.ActionLink("Edit", "Edit", new{id=person.Id}, new {@class = "btn btn-secondary"}) |
				@Html.ActionLink("Delete", "Delete", new{id=person.Id}, new {@class = "btn btn-danger"})
			</td>
		</tr>
	}
</table>
<p>@Html.ActionLink("New", "Create", new{} , new {@class = "btn btn-success"})</p>